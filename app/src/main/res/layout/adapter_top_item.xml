<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/blue_bg"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="8dp"

    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"

        android:layout_height="wrap_content"
        >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="topContentUser"
                android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/title_user"
            android:text="Vayu metang"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/user_number_value"
            android:text="Xxxxx-xxxx-xxx54"
            android:layout_height="wrap_content"/>
            </LinearLayout>

<!--        ///////////Top Right/////////////////////////-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topContentUser"
            android:layout_alignParentEnd="true"
            android:contentDescription="topContentUser"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/title_Save"
                android:textColor="@color/white"

                android:text="Saving"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/user_save_method_value"
                android:text="Main"
                android:layout_gravity="end"
                android:textSize="@dimen/text_sub_size"
                android:layout_height="wrap_content"/>
        </LinearLayout>

<!--        ////////Balance-COntent/////-->
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/balance_layout"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topContentUser"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/current_balance"

                android:text="@string/current_balance"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/curent_balance_value"
                android:textColor="@color/white"
                    android:text="47,0000.00"
                android:textSize="@dimen/text_value_size"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/available_balance_text"
                    android:singleLine="true"

                    android:text="@string/available_balance"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/available_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:text="47,0000.00"
                    android:textSize="@dimen/text_sub_size" />




            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>